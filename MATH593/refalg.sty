\def\thmstyle#1#2
{
  \declaretheoremstyle[
    headfont=\bfseries\sffamily\color{#1!70!black!85}, bodyfont=\normalfont,
    spaceabove=1em,
    mdframed={
            linewidth=2pt,
            rightline=false, topline=false, bottomline=false,
            linecolor=#1!70!black!50, backgroundcolor=#1!4.5,
            nobreak=false
        }
]{#2}
}

